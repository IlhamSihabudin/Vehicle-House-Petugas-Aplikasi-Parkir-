<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BerandaFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/foto_profile"
                    android:src="@drawable/user"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/gradient_pembatas" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMasukParkir"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:drawableTop="@drawable/ic_masuk_parkir"
                    android:text="Masuk\nParkir"
                    android:padding="20dp"
                    android:textColor="#3498db"
                    android:textSize="15sp"
                    android:theme="@style/btnStyle1"/>

                <Button
                    android:id="@+id/btnKeluarParkir"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:drawableTop="@drawable/ic_keluar_parkir"
                    android:text="Keluar\nParkir"
                    android:padding="20dp"
                    android:textColor="#e74c3c"
                    android:textSize="15sp"
                    android:theme="@style/btnStyle1"/>

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nama_petugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</FrameLayout>